use Text::MathematicalCase:ver<0.0.8>:auth<zef:lizmat>;
my %*SUB-MAIN-OPTS = :named-anywhere;

unit sub MAIN(
  Str   $string?,
  Bool :$serif,
  Bool :$sans-serif,
  Bool :$script,
  Bool :$fraktur,
  Bool :$monospace,
  Bool :$double-struck,
  Bool :$italic,
  Bool :$bold
);

say mc $string // slurp,
  :$serif, :$sans-serif, :$script, :$fraktur, :$monospace,
  :$double-struck, :$italic, :$bold

# vim: expandtab shiftwidth=4
